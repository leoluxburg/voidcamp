<div class="container space" style="">
  <h2 class="">Admin</h2>
  <hr>
  <br>
  <h4>Users - #<%= @users.count %> </h4>
  <br>
  <h4>Temas</h4>
  <% @subjects.each do |subject| %>
  <p><%= subject.title %> - <%= link_to 'Show', subject %> | <%= link_to 'Edit', edit_subject_path(subject) %> | <%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
  <br>
  <%= link_to 'New Subject', new_subject_path %>
  <br>
  <br>
  <h4>Lecturas</h4>
  <% @lessons.each do |lesson| %>
  <p class="card-title"><%= lesson.title%> - <%= link_to 'Show', lesson %> | <%= link_to 'Edit', edit_lesson_path(lesson) %> | <%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
  <%= link_to 'New Lesson', new_lesson_path %>
</div>
</div>
</div>
