<div class="container" style="padding-top: 150px;">

<p id="notice"><%= notice %></p>

<h1>Subjects</h1>
<hr>
    <% @subjects.each do |subject| %>
        <h3><%= subject.id %></h3>
        <p><%= subject.title %></p>
        <p><%= subject.info %></p>
        <p><%= subject.theme.title %></p>
        <p><%= link_to 'Show', subject %> | <%= link_to 'Edit', edit_subject_path(subject) %> | <%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></p>

    <% end %>

<br>

<%= link_to 'New Subject', new_subject_path %>
</div>
