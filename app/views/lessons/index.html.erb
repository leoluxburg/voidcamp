<div class="space">
  <div class="container">
    <h1>Lecciones</h1>
    <hr>
    <br>
    <% @lessons.each do |lesson| %>
    <%= link_to lesson do %>
    <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path lesson.photo.key%>')">
      <br>
      <h1><%= lesson.title %></h1>
      <h6><%= lesson.intro %></h6>
      <br>
    </div>
    <% end %>
    <br>
    <% if user_signed_in? %>
    <td><%= link_to 'Show', lesson %></td>
    <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
    <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    <% end %>
    <br>
    <hr>
  </div>
</div>

